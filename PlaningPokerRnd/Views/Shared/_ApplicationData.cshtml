<script type="text/javascript">
    var application;
    $(document).ready(function() {
        application.config = function() {
            var appPath = '@Url.Content("~/")';
            var rootApiUrl = '@(HtmlHelpers.GetBaseUrl() + "api/")';
            var actionUrl = '@(Url.Action(string.Empty, string.Empty, null, Request.Url.Scheme))';

            //hint: sis.config is using javascript self-revealing pattern:
            //http://www.codethinked.com/preparing-yourself-for-modern-javascript-development
            return {
                appPath: appPath,
                getApiUrl: getApiUrl,
                actionUrl: actionUrl,
            }

            function getApiUrl(name) {
                return rootApiUrl + name;
            }
        }
    });
</script>
